/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

textarea {
  resize: none;
}

textarea::placeholder {
  color: #dddddd;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #EAE6EE;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}